{
    "name": "karnauba-pay/async-slim",
    "type": "project",
    "description": "Async banking API built with Slim 4 and Swoole",
    "keywords": [
        "slim",
        "async",
        "swoole",
        "banking",
        "api",
        "php"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Alisson Silva",
            "email": "alisson.sousa12@gmail.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "slim/slim": "^4.15",
        "slim/psr7": "^1.8",
        "psr/http-message": "^2.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
